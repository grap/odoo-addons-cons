<openerp>
    <data>

        <record id="view_product_product_form" model="ir.ui.view">
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <field name="purchase_ok" position="before">
                    <field name="is_consignment" />
                    <label for="is_consignment"/>
                </field>
                <field name="procure_method" position="before">
                    <field name="consignor_id"/>
                </field>
                <xpath expr="//div[@name='buttons']" position="inside">
                    <span class="consigment_label" attrs="{'invisible': [('is_consignment','=', False)]}">Consigment</span>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
