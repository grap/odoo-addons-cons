<openerp><data>

    <record id="view_res_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="before">
                <field name="is_consignor" groups="recurring_consignment.group_consignment_manager"/>
                <label for="is_consignor" groups="recurring_consignment.group_consignment_manager"/>
            </field>
            <field name="property_account_position" position="before">
                <field name="consignment_commission" groups="recurring_consignment.group_consignment_manager"/>
                <field name="consignment_account_id" groups="recurring_consignment.group_consignment_manager"/>
            </field>
            <xpath expr="//div[@name='buttons']" position="inside">
                <button name="%(action_invoice_commission_wizard)d" string="Make Commissions Invoice" type="action" icon="STOCK_EXECUTE"
                    groups="recurring_consignment.group_consignment_user"/>
                <span class="consigment_label" attrs="{'invisible': [('is_consignor','=', False)]}"
                    groups="recurring_consignment.group_consignment_user">Consignor</span>
            </xpath>
        </field>
    </record>

    <record id="view_res_partner_tree" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Consignors" editable="bottom"
                    colors="gray:is_consignor==False; brown:consignment_commission == 0">
                <field name="name" readonly="1"/>
                <field name="is_consignor"/>
                <field name="consignment_commission"/>
                <field name="consignment_account_id" groups="recurring_consignment.group_consignment_manager"/>
                <button name="%(action_invoice_commission_wizard)d" string="Make Commissions Invoice" type="action" icon="STOCK_EXECUTE"
                    groups="recurring_consignment.group_consignment_user"/>
            </tree>
        </field>
    </record>

    <record id="view_res_partner_search" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="supplier" position="after">
                <filter string="Is Consignor" name="is_consignor" domain="[('is_consignor', '=', True)]"/>
            </filter>
        </field>
    </record>


</data></openerp>
