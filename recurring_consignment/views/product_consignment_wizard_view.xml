<openerp>
    <data>

        <record id="view_product_consigment_wizard_form" model="ir.ui.view">
            <field name="model">product.consigment.wizard</field>
            <field name="arch" type="xml">
                <form string="Set Consignor" version="7.0">
                    <group>
                        <field name="consignor_id" />
                        <field name="tax_group_id" />
                    </group>
                    <p class="oe_grey">
                        Set consignor to products is irreversible. The following changes will be applied to the selected products
                        <li>
                            <ul>All supplier informations will be dropped;</ul>
                            <ul>The Cost Price will be set to 0;</ul>
                            <ul>The product will be marked as purchasable;</ul>
                        </li>
                    </p>
                    <footer>
                        <button string="Apply" name="apply" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" default_focus="1"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
